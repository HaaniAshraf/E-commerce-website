<!-- products.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Products</title>
</head>
<link rel="stylesheet" href="css/adminCSS/productlist.css">
<link rel="shortcut icon" href="images/cartlogo.png" type="image/x-icon">
<script src="https://kit.fontawesome.com/ce01cf2811.js" crossorigin="anonymous"></script>
<body>

  <a href="/adminHome" style="color: white;">
    <div class="logo" style="display: flex;gap: 5px; margin-top: 15px;margin-left: 15px;">
      <img src="/images/cartlogo.png" alt="cart" class="cartlogo">
      <h2 class="smart">SHOP <span>ON</span></h2>
  </div>
  </a>
  <a href="/addProduct" class="add"><i class="fa-solid fa-plus"></i> Add a Product</a>


  <div class="content">
    <h1>Products</h1>

    <% if (products.length > 0) { %>
      <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th class="description">Description</th>
                <th>Rating</th>
                <th>Price</th>
                <th>Original Price</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
          <% products.forEach((product) => { %>
            <tr>
              <td>
                <% if (product.imageUrls && product.imageUrls.length > 0) { %>
                  <img src="<%= product.imageUrls[0] %>" alt="<%= product.name %>" class="product-img default">
                <% } %>
              </td>
              <td><%= product.name %></td>
              <td><%= product.category %></td>
              <td><%= product.description %></td>
              <td><%= product.rating %></td>
              <td>₹ <%= product.price %></td>
              <td>
                <% if (product.ogPrice) { %>
                  ₹ <%= product.ogPrice %>
                <% } %>
              </td>
              <td>
                <a href="/updateProduct/<%= product._id %>">
                  <button class="btn1"><i class="fa-solid fa-pen-to-square"></i></button>
                </a>
              </td>
              <td>
                <form action="/deleteProduct/<%= product._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this product?')">
                  <button type="submit" class="btn2"><i class="fa-regular fa-trash-can"></i></button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No products available.</p>
    <% } %>
  </div>
    
</body>
</html>
