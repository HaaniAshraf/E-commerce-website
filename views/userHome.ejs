                <img src="<%= product.imageUrls[0] %>" alt="<%= product.name %>" class="product-img default">
              <% } %>
              <div class="showcase-actions">
                
              <button id="wishlistButton" class="btn-action" data-product-id="<%= product._id %>"
                data-action="<%= userWishlist && userWishlist.products.includes(product._id.toString()) ? 'removeFromWishlist' : 'addToWishlist' %>"
                onclick="toggleWishlist(event)">
            <i class="fa-solid fa-heart buttonAction <%= userWishlist && userWishlist.products.includes(product._id.toString()) ? 'redcolor' : '' %>"></i>
        </button>                                                                          
        <button type="button" class="btn-action" id="addToCartButton">
          <i class="fa-solid fa-cart-shopping buttonAction <%= userCart && userCart.products.some(item => item.product.toString() === product._id.toString()) ? 'orangeColor' : '' %>" id="cartIcon" data-product-id="<%= product._id %>"></i>
      </button>                                 
              <button type="submit" class="btn-action" id="infoButton" data-product-id="<%= product._id %>">
               <a href="/details/<%= product._id %>"><i class="fa-solid fa-circle-info buttonAction"></i></a> 
            </button>          
              </div>
            </div>
      
            <div class="showcase-content">
              <a href="/details/<%= product._id %>">
              <h3 class="showcase-name"><%= product.name %></h3>   
            </a>         
              <div class="price-box">
                <p class="price">₹ <%= product.price.toFixed(2) %></p>
                <% if (product.ogPrice !== undefined) { %>
