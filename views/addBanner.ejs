<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Add Banner</title>
    <link rel="shortcut icon" href="images/cartlogo.png" type="image/x-icon" />
    <link rel="stylesheet" href="css/adminCSS/addBanner.css" />
  </head>
  <body>
    <a href="/adminHome" style="color: white">
      <div
        class="logo"
        style="display: flex; gap: 5px; margin-top: 15px; margin-left: 15px"
      >
        <img src="/images/cartlogo.png" alt="cart" class="cartlogo" />
        <h2 class="smart">SHOP <span>ON</span></h2>
      </div>
    </a>

    <div class="content">
      <div class="left">
        <h1>Banners</h1>
        <% if (banners.length > 0) { %>
        <ul>
          <% banners.forEach(banner => { %>
          <li>
            <img
              src="images/<%= banner.imageUrl %>"
              alt="Banner"
              width="100"
            /><br />
            <p><%= banner.content %></p>
            <div class="btns">
              <a href="/updateBanner/<%= banner._id %>">
                <button class="btn1">Update</button>
              </a>
              <form
                action="/deleteBanner/<%= banner._id %>"
                method="post"
                onsubmit="return confirm('Are you sure you want to delete this banner?')"
              >
                <button type="submit" class="btn2">Delete</button>
              </form>
            </div>
          </li>
          <br /><br /><br />
          <% }); %>
        </ul>
        <% } else { %>
        <p>No banners available.</p>
        <% } %>
      </div>

      <div class="right">
        <h1>Add Banner</h1>
        <form action="/addBanner" method="post">
          <label for="imageUrl">Image URL:</label>
          <input
            type="file"
            accept="image/*"
            id="imageUrl"
            name="imageUrl"
            required
          />
          <label for="content">Content:</label>
          <input
            type="text"
            name="content"
            id="content"
            placeholder="Your Banner Content"
          />
          <button type="submit">Add Banner</button>
        </form>
      </div>
    </div>
  </body>
</html>
